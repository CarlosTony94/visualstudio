@model List<PracticaInterna.Models.ViewModels.ProductsViewModel>
@{
    ViewBag.Title = "Celulares";
}

<h2>@ViewBag.Title</h2>
<hr />


<div class="row justify-content-center mt-4">
    @foreach (var oElemento in Model)
    {
        <div class="col-md-4 col-sm-4 mt-2 mb-3">
            <div class="card text-center" style="width: 18rem;">
                <img src="@oElemento.image" class="card-img-top mx-auto"
                     style="max-width:175px" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@oElemento.name</h5>
                    <p class="card-text"><strong>@oElemento.newPrice</strong><s>@oElemento.oldPrice</s></p>
                    <a  href="~/Celulares/Detalle/@oElemento.Id" class="btn btn-success">COMPRAR</a>
                </div>
            </div>
        </div>
    }

</div>

