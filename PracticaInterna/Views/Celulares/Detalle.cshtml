@model List<PracticaInterna.Models.ViewModels.ProductsViewModel>

@{
    ViewBag.Title = "Detalle";
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center mt-4">
    @foreach (var oElemento in Model)
    {
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@oElemento.image" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@oElemento.name</h5>
                        <p class="card-text"><strong>@oElemento.newPrice</strong><s>@oElemento.oldPrice</s></p>
                        <a href="~/" class="btn btn-success">REGRESAR</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>