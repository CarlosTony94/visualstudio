@model List<PracticaInterna.Models.ViewModels.ProductsViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide mt-3" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://www.tiendamonge.com/media/wysiwyg/EN21-GMG-MONITOR-BANNER-back-to-school_2732X642.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://www.tiendamonge.com/media/wysiwyg/Banners-167885-2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://www.tiendamonge.com/media/wysiwyg/flexi_1_1.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mt-5">
    <div class="row">
        <h1>Productos Monge</h1>
        <hr />
    </div>
    <div class="row justify-content-center mt-4">
        @foreach (var oElemento in Model)
        {
            <div class="col-md-4 col-sm-12 mt-2 align-items-center">
                <div class="card text-center" >
                    <img src="@oElemento.image" class="card-img-top mx-auto"
                         style="max-width:175px" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@oElemento.name</h5>
                        <p class="card-text"><strong>@oElemento.newPrice</strong><s>@oElemento.oldPrice</s></p>
                        <a href="~/Celulares/Detalle/@oElemento.Id" class="btn btn-success">COMPRAR</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

